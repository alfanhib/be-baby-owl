# ============================================================================
# LMS Baby Owl - Environment Configuration
# ============================================================================
# Copy this file to .env and update the values

# ============================================================================
# Application
# ============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME="Inntexia Academy"
APP_URL=http://localhost:3000

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=new_lms_inntexia
DB_PASSWORD=inntexia_secret
DB_NAME=new_lms_inntexia

# Prisma connection string
DATABASE_URL="postgresql://new_lms_inntexia:inntexia_secret@localhost:5432/new_lms_inntexia?schema=public"

# Connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# Redis
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_DB=0

# Redis URL (alternative)
REDIS_URL="redis://:redis_secret@localhost:6379/0"

# ============================================================================
# JWT Authentication
# ============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-256-bit-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# Bcrypt
# ============================================================================
BCRYPT_SALT_ROUNDS=12

# ============================================================================
# Rate Limiting
# ============================================================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Auth endpoints (more restrictive)
THROTTLE_AUTH_TTL=60000
THROTTLE_AUTH_LIMIT=10

# ============================================================================
# Email (Resend)
# ============================================================================
# Get API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM="Inntexia Academy <noreply@inntexia.com>"

# Development: Use Mailpit
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# ============================================================================
# File Storage
# ============================================================================
# Driver: 'local' or 's3'
STORAGE_DRIVER=local

# Local storage config (when STORAGE_DRIVER=local)
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_SERVE_URL=/uploads

# AWS S3 config (when STORAGE_DRIVER=s3)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=inntexia-uploads
CDN_URL=

# Presigned URL expiry (seconds)
S3_PRESIGNED_EXPIRY=3600

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ============================================================================
# Docker Dev Tools (Optional)
# ============================================================================
# Redis Commander
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# pgAdmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@inntexia.com
PGADMIN_PASSWORD=admin

# Mailpit
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_GAMIFICATION=true
FEATURE_COMMUNITY=true
FEATURE_MESSAGING=true

